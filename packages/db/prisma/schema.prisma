generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id    String   @id @default(uuid())
  name String @unique
  email String @unique
  password String
  avatar String?
 requests Json[] @default([])
  adminRooms Room[] @relation("RoomAdmin")
  rooms    Room[]    @relation("RoomMembers")
  messages Message[]
  
}

model Room {
  id Int @id @default(autoincrement())
  slug String @unique
  name String
  adminId String
  desc String
  
  admin     User     @relation("RoomAdmin", fields: [adminId], references: [id])
  members   User[]    @relation("RoomMembers")
  createdAt DateTime @default(now())
  messages Message[]
}



model Message {
  id Int @id @default(autoincrement())
  slugid String @unique
  room Room @relation(fields:[slugid], references: [slug])
  canvasJson String
  updatedAt DateTime @default(now())
   userid String
   user User @relation(fields:[userid], references: [id])

}

 